<!DOCTYPE html>
<html>

<head>
    <title>Post Notice | Placementcell</title>

    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/library/semantic/semantic.css' />
    <script type="text/javascript" src="/library/javascript/jquery-3.1.0.min.js"></script>
    <script type="text/javascript" src="/library/semantic/semantic.js"></script>
    <script src="/library/tinymce/tinymce.min.js"></script>
    <script>
        tinymce.init({
            selector: '#message',
            height: 300,
            resize: false,
            theme: 'modern',
            plugins: [
                'advlist autolink lists link image charmap print preview hr anchor pagebreak',
                'searchreplace wordcount visualblocks visualchars code fullscreen',
                'insertdatetime nonbreaking save table contextmenu directionality',
                'emoticons template paste textcolor colorpicker textpattern '
            ],
            toolbar1: 'undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link',
            toolbar2: 'print preview| forecolor backcolor emoticons',
            image_advtab: true,
            content_css: [
                '//fonts.googleapis.com/css?family=Lato:300,300i,400,400i',
                '//www.tinymce.com/css/codepen.min.css'
            ]
        });
    </script>
</head>

<body>
    <div class="ui container new-notice">
        <div class="ui center aligned segment">
            <h2>Post a Notice</h2>
        </div>
        <div class="ui divider">
        </div>
        <div class="ui segment">
            <form class="ui form" action="/new" method="POST">
                <div class="field">
                    <div class="ui labeled input">
                        <div class="ui label">
                            <h4>Title</h4></div>
                        <input type="text" name="title" placeholder="Enter title of notice" required="required">
                    </div>
                </div>
                <div class="field">
                    <h4>Message Content</h4>
                    <textarea id="message" name="content" rows="8" cols="40" placeholder="Enter content here" ></textarea>
                </div>
                <div class="field">
                    <button class="ui basic teal button" type="submit">Submit</button>
                </div>
            </form>
        </div>

    <div class="ui divider">
    </div>
    <div class="ui segment right aligned">
        <div class="ui basic yellow button">
            <a href="/all">View all notices</a>
        </div>
        <div class="ui basic yellow button">
            <a href="/">Home</a>
        </div>
    </div>
    </div>
</body>

</html>
